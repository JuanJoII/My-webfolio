---
const navItems = [
  { title: "Inicio", label: "top", url: "#top" },
  { title: "Sobre mí", label: "sobre-mi", url: "#sobre-mi" },
  { title: "Experiencia", label: "experiencia", url: "#experiencia" },
  { title: "Proyectos", label: "proyectos", url: "#proyectos" },
  { title: "Contacto", label: "contacto", url: "mailto:juanjose34251@gmail.com" },
];
---

<header class="fixed top-0 left-0 right-0 z-50 flex justify-center items-center py-3 sm:py-4 px-3 sm:px-6">
  <nav class="flex items-center gap-2 sm:gap-4 px-2 sm:px-4 py-2 text-xs sm:text-sm font-medium rounded-full bg-white/50 dark:bg-gray-800/70 backdrop-blur-2xl shadow-lg ring-1 ring-white/10 w-auto">
    
    <a href="#top" class="shrink-0">
      <img 
        src="/My-webfolio/profile/avatar.webp" 
        alt="Juan José Camacho" 
        class="w-6 h-6 sm:w-8 sm:h-8 rounded-full ring-2 ring-blue-500/20 hover:ring-blue-500/50 transition-shadow"
      />
    </a>

    <div class="w-px h-4 sm:h-6 bg-gray-300 dark:bg-gray-600 shrink-0"></div>

    <div class="flex items-center gap-0.5 sm:gap-1">
      {navItems.map((link) => (
        <a
          href={link.url}
          aria-label={link.label}
          class="relative px-1.5 sm:px-3 py-1.5 transition-colors hover:text-blue-500 dark:hover:text-blue-500 whitespace-nowrap text-[10px] sm:text-sm"
        >
          {link.title}
          <!-- Indicador activo -->
          <span class="absolute inset-0 rounded-full bg-blue-500/10 scale-0 transition-transform duration-300" aria-hidden="true"></span>
        </a>
      ))}
    </div>
  </nav>
</header>